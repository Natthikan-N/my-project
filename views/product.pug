include _component  

block append head

block content
    .product__core-card
        .product__core-card-head 
            h1.product__core-card-head-h1 model : 
                span= core.model 
            h1.product__core-card-head-h1 part no : 
                span=core.partNo
        .product__core-card-properties 
            ul.product__core-card-properties-list 
                li.product__core-card-properties-item
                    img.product__core-card-properties-img(src=`${core.img}`, alt="img")
                li.product__core-card-properties-item
                    ul.product__core-card-properties-detail-list
                        li.product__core-card-properties-detail-item core width : 
                            span= core.coreProperties.coreWidth
                        li.product__core-card-properties-detail-item core height : 
                            span= core.coreProperties.coreHeight
                        li.product__core-card-properties-detail-item core surface area : 
                            span= core.coreProperties.coreArea
