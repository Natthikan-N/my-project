mixin componentPartSelect(label,idpart_1,idpart_2,name1,name2,component)
    if(idpart_2=="" )
        if(name1=="joint"||name1=="cap")
            li.create-core__component-item
                label.create-core__component-label(for="") #{label}
                select.create-core__component-select(id=`${idpart_1}`,name=`${name1}_detail`)
                    option SELECT PART NO.
                    each compo in component
                        option= compo.partNo 
            //- .mb-3.row 
            //-     label.col-sm-3.col-form-label(for =`${id}`) #{label}
            //-     .col-sm-4
            //-         select.form-select(id=`${idpart_1}`,name=`${name1}_detail`)

