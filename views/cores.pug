block append head

block content
        
    .core-detail 
            ul.core-detail__list
                each core in cores
                    li.core-detail__item#card1
                        a.core-detail__link(href=`/core/${core.slug}`) 
                                .core-detail__info
                                    img.core-detail__img(src=src= core.img, alt="core")
                                    h1.core-detail__heading= core.model 
                                    ul.core-detail__list-info
                                        li.core-detail__list-info-item 
                                            span=core.partNo
                                        li.core-detail__list-info-item Width: 
                                            span= core.coreProperties.coreWidth
                                        li.core-detail__list-info-item Height: 
                                            span= core.coreProperties.coreHeight
                                        li.core-detail__list-info-item Area: 
                                            span= core.coreProperties.coreArea 

